# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /    			    		controllers.HomeController.index
POST    /			    			controllers.HomeController.login
GET		/logout			    		controllers.HomeController.logout

GET     /practice		    		controllers.PracticeController.initializePractice
GET     /help		    			controllers.PracticeController.initializeHelp
POST    /practice		    		controllers.PracticeController.startSession
POST    /practice-session	    	controllers.PracticeController.submitSession

GET     /teacherlogin		    	controllers.TeacherLoginController.index
POST    /teacherlogin		    	controllers.TeacherLoginController.login
GET		/teacherlogin/logout	    controllers.TeacherLoginController.logout

GET    /student/create		    	controllers.StudentController.index
GET    /student/delete/:id/			controllers.StudentController.deleteStudent(id: Long)

GET		/student/edit/:id			controllers.EditStudentController.index(id: Long)
GET		/student/edit/update/:id	controllers.EditStudentController.edit(id: Long)
POST	/student/edit/update/:id	controllers.EditStudentController.edit(id: Long)

GET		/admin			    		controllers.AdminController.index
POST	/admin			    		controllers.AdminController.login
GET		/admin/login	    		controllers.AdminController.logout

GET     /language                   controllers.LanguageController.index(language: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file  	    	    controllers.Assets.versioned(path="/public", file: Asset)

GET		/teachers		    		controllers.TeacherController.teachers
POST	/teachers		    		controllers.TeacherController.createTeacher
GET		/teachers/:id/delete	    controllers.TeacherController.deleteTeacher(id: Long)
GET		/teachers/:id/edit	    	controllers.TeacherController.editTeacher(id: Long)

POST	/students		    		controllers.StudentController.createStudent

GET 	/teacher/edit/:id/			controllers.EditTeacherController.index(id: Long)
GET 	/teacher/edit/update/:id/	controllers.EditTeacherController.edit(id: Long)
POST 	/teacher/edit/update/:id/	controllers.EditTeacherController.edit(id: Long)

GET		/createnewgame		    	controllers.NewGameController.initializeNewGame
POST	/newgame		        	controllers.NewGameController.createGame
POST	/registergame				controllers.NewGameController.registerGame
POST	/joingame					controllers.NewGameController.joinGame
GET		/games/:id					controllers.NewGameController.viewGame(id: String)
GET		/games/:id/play				controllers.NewGameController.playGame(id: String)
GET     /gamews               		controllers.NewGameController.gameWS()
GET		/observegamews/:id			controllers.NewGameController.observeGameWS(id: String)
